
<div class='posts'> 
  <%@posts.each do |post|%>
    <ul>
      <li>
      </li>
      <li><a id='post_title' href="/posts/<%=post.id%>"><%=post.title%></a></li>
      <ul>
        <li id='post_stats'><%=post_score(post)%> point(s) | <%=post.user.name%></li>
      </ul>
        <form name="upvote" method="POST" action="/post_upvote">
          <input type="hidden" name="post_id" value="<%=post.id%>">
          <input type='submit' value='VoteUp'>
        </form>
      </li>
      <li>        
        <form name="downvote" method="POST" action="/post_downvote">
          <input type="hidden" name="post_id" value="<%=post.id%>">
          <input type='submit' value='VoteDown'>
        </form>
        <hr>
    </ul>
  <%end%>
</div>
